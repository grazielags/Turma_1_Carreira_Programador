algoritmo "Soma e Subtração"

var
   a, b, c, d: inteiro
inicio
      a <- 4
      escreval("O valor de X é: ", a)
      b <- 3
      escreval("O valor de Y é: ", b)
      c <- a + b
      escreval("A Soma dos Valores é: ", c)
      d <- a - b
      escreval("A Subtração dos Valores é: ", d)
fimalgoritmo
